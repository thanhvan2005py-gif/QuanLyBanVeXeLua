@model QLXeBusPhuongTrang_65134257.Models.Chuyen

@{
    ViewBag.Title = "Edit";

}

<h2>Chỉnh sửa thông tin Chuyến xe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thông tin chuyến</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaChuyen)

        <div class="form-group">
            <label class="control-label col-md-2">Lịch chạy</label>
            <div class="col-md-10">
                @Html.DropDownList("MaLichChay", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLichChay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ngay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ngay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2 font-weight-bold text-danger">Giá Vé (VNĐ)</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaVe, new
                {
                    htmlAttributes = new
                    {
                        @class = "form-control",
                        @type = "number",   // Chỉ cho nhập số
                        @min = "0",         // Không nhập số âm
                        @step = "1000",     // Mỗi lần tăng giảm 1000đ
                        @placeholder = "Nhập giá vé..."
                    }
                })
                @Html.ValidationMessageFor(model => model.GiaVe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số ghế trống</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoGheTrong, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.SoGheTrong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}