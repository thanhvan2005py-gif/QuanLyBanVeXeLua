@model QLXeBusPhuongTrang_65134257.Models.Tuyen

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    .card-custom {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .card-header-custom {
        background: linear-gradient(45deg, #4e73df, #224abe);
        color: white;
        border-radius: 12px 12px 0 0 !important;
        padding: 15px 20px;
    }

    .form-label {
        font-weight: 600;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .form-control {
        border-left: none;
    }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

    .input-group:focus-within .input-group-text,
    .input-group:focus-within .form-control {
        border-color: #4e73df;
    }

    .btn-save {
        background-color: #4e73df;
        color: white;
        padding: 10px 25px;
        border-radius: 30px;
        border: none;
        transition: 0.3s;
    }

        .btn-save:hover {
            background-color: #2e59d9;
            transform: translateY(-2px);
        }

    .btn-back {
        color: #6c757d;
        text-decoration: none;
        padding: 10px 20px;
        transition: 0.3s;
    }

        .btn-back:hover {
            color: #495057;
            background-color: #e9ecef;
            border-radius: 30px;
            text-decoration: none;
        }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card card-custom">
                <div class="card-header card-header-custom">
                    <h4 class="m-0"><i class="fas fa-edit me-2"></i> Cập Nhật Thông Tin Tuyến</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaTuyen)

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-12 mb-3">
                                <label class="form-label">Tên Tuyến</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-road"></i></span>
                                    @Html.EditorFor(model => model.TenTuyen, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên tuyến xe..." } })
                                </div>
                                @Html.ValidationMessageFor(model => model.TenTuyen, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Bến Đầu</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-marker-alt text-success"></i></span>
                                    @Html.DropDownList("BenDau", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.BenDau, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Bến Cuối</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-map-pin text-danger"></i></span>
                                    @Html.DropDownList("BenCuoi", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                                @Html.ValidationMessageFor(model => model.BenCuoi, "", new { @class = "text-danger small mt-1" })
                            </div>

                            <div class="col-12 mb-4">
                                <label class="form-label">Quãng Đường (Km)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-ruler-horizontal"></i></span>
                                    @Html.EditorFor(model => model.QuangDuongKm, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số km..." } })
                                    <span class="input-group-text">Km</span>
                                </div>
                                @Html.ValidationMessageFor(model => model.QuangDuongKm, "", new { @class = "text-danger small mt-1" })
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a href="@Url.Action("Index")" class="btn-back">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                            </a>
                            <button type="submit" class="btn btn-save">
                                <i class="fas fa-save me-1"></i> Lưu Thay Đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
