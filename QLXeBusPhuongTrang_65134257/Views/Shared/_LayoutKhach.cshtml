<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Phương Trang FUTA Bus Lines</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: #f4f6f8;
            font-family: 'Segoe UI', Tahoma, sans-serif;
        }

        /* HEADER */
        .futa-header {
            background: linear-gradient(90deg, #ff6b00, #ff8800);
            padding: 10px 0;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .futa-header .logo img {
                height: 100px;
                width: 100px; /* Chỉnh lại chút cho gọn */
                border-radius: 50%;
                background-color: white;
                padding: 5px;
                object-fit: contain;
                transition: transform 0.3s ease-in-out;
                filter: drop-shadow(0 0 5px rgba(255, 255, 255, 0.5));
            }

                .futa-header .logo img:hover {
                    transform: scale(1.1) rotate(5deg);
                }

        .header-title {
            color: white;
            font-weight: bold;
            font-size: 24px; /* Giảm size chữ chút cho thanh thoát */
            text-shadow: 1px 2px 3px rgba(0,0,0,0.4);
            text-transform: uppercase;
        }

        /* NAV BAR */
        .futa-nav-bar {
            background: #ffffff;
            padding: 10px 0;
            box-shadow: 0 3px 6px rgba(0,0,0,0.08);
        }

        .menu-list {
            list-style: none;
            width: 100%;
            justify-content: center;
            gap: 20px;
        }

            .menu-list li a {
                text-decoration: none;
                font-weight: 600;
                padding: 8px 14px;
                border-radius: 8px;
                transition: 0.25s;
                font-size: 16px;
                color: #ff6b00;
            }

                .menu-list li a:hover {
                    background: #ff6b00;
                    color: white;
                    box-shadow: 0 4px 8px rgba(255,102,0,0.35);
                }

        .separator {
            color: #ddd;
            font-size: 20px;
            margin: 0 5px;
        }

        /* AUTH PANEL */
        .auth-panel {
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
        }

        .btn-auth {
            text-decoration: none;
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: bold;
            font-size: 14px;
            transition: 0.3s;
        }

        .btn-register {
            background-color: white;
            color: #ff6b00;
            border: 1px solid #ff6b00;
            margin-right: 5px;
        }

            .btn-register:hover {
                background-color: #ff6b00;
                color: white;
            }

        .btn-login {
            background-color: #ff6b00;
            color: white;
            border: 1px solid #ff6b00;
        }

            .btn-login:hover {
                background-color: #e65c00;
            }

        /* CONTENT & FOOTER */
        .content {
            min-height: 70vh;
            padding: 25px;
            background: #fff;
            width: 90%;
            margin: 20px auto;
            border-radius: 16px;
            box-shadow: 0 5px 12px rgba(0,0,0,0.08);
        }

        .futa-main-footer {
            background: #222;
            padding: 20px;
            color: #ddd;
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            border-top: 4px solid #ff6b00;
        }

        .user-info {
            text-decoration: none;
            color: #333;
            font-weight: bold;
        }

            .user-info:hover {
                color: #ff6b00;
            }
    </style>
</head>
<body>
    <header class="futa-header">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="logo">
                <a href="@Url.Action("Index", "Tuyen_65134257")" title="Về trang chủ">
                    <img src="~/Images/futa_logo.png" alt="Logo Phương Trang">
                </a>
            </div>

            <h3 class="header-title">HỆ THỐNG ĐẶT VÉ XE BUS PHƯƠNG TRANG</h3>
        </div>
    </header>

    <nav class="futa-nav-bar border-bottom border-2 mb-2 position-relative">
        <div class="container d-flex justify-content-center align-items-center position-relative">

            <ul class="d-flex p-0 align-items-center menu-list mb-0">
                <li class="nav-item"><a href="@Url.Action("Index","Tuyen_65134257")"><i class="fas fa-route me-2"></i>LỊCH TRÌNH</a></li>
                <span class="separator">|</span>
                <li class="nav-item"><a href="@Url.Action("Index","Ve_65134257")"><i class="fas fa-search me-2"></i>LỊCH SỬ VÉ</a></li>
                <span class="separator">|</span>
                <li class="nav-item"><a href="@Url.Action("Index", "HuongDanDatVe_65134257")"><i class="fas fa-phone-alt me-2"></i>HƯỚNG DẪN</a></li>
            </ul>

            <div class="auth-panel position-absolute end-0">
                @if (Session["KhachHang"] == null && Session["TaiKhoan"] == null)
                {
                    <a href="@Url.Action("DangKy", "Account_65134257")" class="btn-auth btn-register">
                        <i class="fas fa-user-plus me-1"></i> Đăng ký
                    </a>
                    <a href="@Url.Action("DangNhap", "Account_65134257")" class="btn-auth btn-login">
                        <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                    </a>
                }
                else
                {
                    <div class="dropdown">
                        <a class="user-info dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle fa-lg me-1 text-warning"></i>
                            @if (Session["KhachHang"] != null)
                            {
                                <span>@(((dynamic)Session["KhachHang"]).TenKH)</span>
                            }
                            else if (Session["TaiKhoan"] != null)
                            {
                                <span>Quản Trị: @(((dynamic)Session["TaiKhoan"]).HoTen)</span>
                            }
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="userDropdown">
                            @if (Session["KhachHang"] != null)
                            {
                                <li>
                                    <a class="dropdown-item py-2" href="@Url.Action("Index", "Ve_65134257")">
                                        <i class="fas fa-ticket-alt me-2 text-primary" style="width:20px"></i> Vé của tôi
                                    </a>
                                </li>
                                <li>
                                    @* Lưu ý: Link này trỏ về Action Details đã sửa ở bước trước *@
                                    <a class="dropdown-item py-2" href="@Url.Action("Details", "KhachHang_65134257")">
                                        <i class="fas fa-user-edit me-2 text-info" style="width:20px"></i> Hồ sơ cá nhân
                                    </a>
                                </li>
                            }

                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("DangXuat", "Account_65134257")">
                                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </div>

        </div>
    </nav>

    <div class="content">
        @RenderBody()
    </div>

    <footer class="futa-main-footer">
        <div class="container">
            <p class="mb-1 fw-bold">CÔNG TY CỔ PHẦN XE KHÁCH PHƯƠNG TRANG - FUTA BUS LINES</p>
            <p class="mb-0 small">Copyright © @DateTime.Now.Year | Hotline: 1900 6067</p>
        </div>
    </footer>

    
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>