@model QLXeBusPhuongTrang_65134257.Models.LichChay

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4" style="background: linear-gradient(45deg, #0d6efd, #0a58ca);">
                    <h4 class="mb-0 text-center fw-bold"><i class="fas fa-calendar-plus me-2"></i> THÊM LỊCH CHẠY</h4>
                </div>

                <div class="card-body p-4 p-md-5">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger mb-4" })

                        <div class="mb-4">
                            @Html.LabelFor(model => model.MaTuyen, "Tuyến Xe", htmlAttributes: new { @class = "form-label fw-bold text-secondary" })
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-route text-primary"></i></span>
                                @Html.DropDownList("MaTuyen", null, htmlAttributes: new { @class = "form-select form-control-lg" })
                            </div>
                            @Html.ValidationMessageFor(model => model.MaTuyen, "", new { @class = "text-danger small ms-2" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                @Html.LabelFor(model => model.MaXe, "Xe Chạy", htmlAttributes: new { @class = "form-label fw-bold text-secondary" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-bus text-success"></i></span>
                                    @Html.DropDownList("MaXe", null, htmlAttributes: new { @class = "form-select" })
                                </div>
                                @Html.ValidationMessageFor(model => model.MaXe, "", new { @class = "text-danger small ms-2" })
                            </div>

                            <div class="col-md-6 mb-4">
                                @Html.LabelFor(model => model.MaTaiXe, "Tài Xế", htmlAttributes: new { @class = "form-label fw-bold text-secondary" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-user-tie text-info"></i></span>
                                    @Html.DropDownList("MaTaiXe", null, htmlAttributes: new { @class = "form-select" })
                                </div>
                                @Html.ValidationMessageFor(model => model.MaTaiXe, "", new { @class = "text-danger small ms-2" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                @Html.LabelFor(model => model.GioKhoiHanh, "Giờ Khởi Hành", htmlAttributes: new { @class = "form-label fw-bold text-secondary" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-clock text-warning"></i></span>
                                    @Html.EditorFor(model => model.GioKhoiHanh, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.GioKhoiHanh, "", new { @class = "text-danger small ms-2" })
                            </div>

                            <div class="col-md-6 mb-4">
                                @Html.LabelFor(model => model.GioDen, "Giờ Đến (Dự kiến)", htmlAttributes: new { @class = "form-label fw-bold text-secondary" })
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-flag-checkered text-danger"></i></span>
                                    @Html.EditorFor(model => model.GioDen, new { htmlAttributes = new { @class = "form-control", type = "time" } })
                                </div>
                                @Html.ValidationMessageFor(model => model.GioDen, "", new { @class = "text-danger small ms-2" })
                            </div>
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(model => model.TrangThai, "Trạng Thái", htmlAttributes: new { @class = "form-label fw-bold text-secondary" })
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-info-circle text-secondary"></i></span>
                                @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger small ms-2" })
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <a href="@Url.Action("Index", "Tuyen_65134257")" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i> Quay Lại
                            </a>
                            <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">
                                <i class="fas fa-save me-2"></i> Lưu Lịch Chạy
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* CSS Tùy chỉnh nhẹ */
    .form-control, .form-select, .input-group-text {
        border-color: #dee2e6;
        padding: 10px 15px;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    .form-control, .form-select {
        border-left: none;
    }

    /* Hiệu ứng hover cho card */
    .card {
        transition: transform 0.3s;
    }
</style>