@model IEnumerable<QLXeBusPhuongTrang_65134257.Models.LichChay>

@{
    ViewBag.Title = "Index";
  
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold m-0">
            <i class="fas fa-calendar-alt me-2"></i> QUẢN LÝ LỊCH CHẠY
        </h2>
        <a href="@Url.Action("Create")" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-1"></i> Thêm Lịch Mới
        </a>
    </div>

    <div class="mb-3">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-light py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh Sách Các Chuyến Đang Hoạt Động</h6>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-primary text-white text-center">
                        <tr>
                            <th class="py-3">Tuyến Xe / Biển Số</th>
                            <th class="py-3">Tài Xế</th>
                            <th class="py-3">Thời Gian Khởi Hành</th>
                            <th class="py-3">Dự Kiến Đến</th>
                            <th class="py-3">Trạng Thái</th>
                            <th class="py-3" style="width: 150px;">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-dark">
                                            <i class="fas fa-route text-danger me-1"></i> @item.Tuyen.TenTuyen
                                        </span>
                                        <small class="text-muted mt-1">
                                            <i class="fas fa-bus text-secondary me-1"></i> Xe:
                                            <span class="badge bg-light text-dark border">@item.Xe.BienSo</span>
                                        </small>
                                    </div>
                                </td>

                                <td class="text-center">
                                    <span class="fw-bold text-secondary">@item.TaiXe.HoTen</span>
                                </td>

                                <td class="text-center">
                                    <div class="fw-bold text-primary">
                                        @item.GioKhoiHanh.ToString(@"hh\:mm") <br />
                                    </div>
                                </td>

                                <td class="text-center">
                                    <div class="fw-bold text-success">
                                        @item.GioDen.ToString(@"hh\:mm")
                                    </div>
                                </td>

                                <td class="text-center">
                                    @{
                                        string statusClass = "bg-secondary";
                                        string icon = "fa-minus";

                                        if (item.TrangThai != null)
                                        {
                                            if (item.TrangThai.Contains("Đang hoạt động") || item.TrangThai.Contains("Sẵn sàng"))
                                            {
                                                statusClass = "bg-success";
                                                icon = "fa-check-circle";
                                            }
                                            else if (item.TrangThai.Contains("Tạm ngưng") || item.TrangThai.Contains("Hủy"))
                                            {
                                                statusClass = "bg-danger";
                                                icon = "fa-times-circle";
                                            }
                                            else
                                            {
                                                statusClass = "bg-warning text-dark";
                                                icon = "fa-clock";
                                            }
                                        }
                                    }
                                    <span class="badge @statusClass p-2">
                                        <i class="fas @icon me-1"></i> @item.TrangThai
                                    </span>
                                </td>

                                <td class="text-center">
                                    <div class="btn-group " role="group">
                                        <a href="@Url.Action("Edit", new { id = item.MaLichChay })" class="btn btn-warning btn-sm text-white" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @using (Html.BeginForm("Delete", "LichChay_65134257", new { id = item.MaLichChay }, FormMethod.Post, new { style = "display:inline;" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    title="Xóa"
                                                    onclick="return confirm('Bạn có chắc chắn muốn xóa lịch chạy này không?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white py-3">
            <small class="text-muted">Hiển thị @Model.Count() bản ghi</small>
        </div>
    </div>
</div>

<style>
    /* CSS tùy chỉnh nhỏ để bảng đẹp hơn */
    .table thead th {
        vertical-align: middle;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }

    .table tbody td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .btn-group .btn {
        margin: 0 2px;
        border-radius: 4px !important;
    }
</style>
